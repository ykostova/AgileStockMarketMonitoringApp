<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid android:color="#3a1e0e"/>
            <stroke
                android:width="2dp"
                android:color="#5e3517" />
        </shape>
    </item>
    
    <item android:state_focused="true" >
        <shape android:shape="oval">
            <solid android:color="#3a1e0e"/>
            <stroke
                android:width="2dp"
                android:color="#5e3517" />
        </shape>
    </item>
    
    <item>        
        <shape android:shape="oval">
            <solid android:color="#5e3517"/>
    		<stroke android:width="2sp" android:color="#f3bf7f" />
        </shape>
    </item>
</selector>

